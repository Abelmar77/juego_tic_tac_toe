<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/x2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/o2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/o" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="550dp"
        android:layout_height="950dp"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fondo_menu" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/fondo" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView44"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView55"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView66"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView77"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView88"
                android:layout_width="97dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

            <ImageView
                android:id="@+id/imageView99"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/l0" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnJugador"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:onClick="clickJugador"
        android:text="Un jugador"
        android:textColor="@color/cafe"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:strokeColor="@color/cafe" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:onClick="clickMultiplayer"
        android:text="Multijugador"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/cafe"
        android:textColor="@color/cafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJugador" />

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GATO IMPOSIBLE"
        android:textColor="@color/cafe"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/btnJugador"
        app:layout_constraintStart_toStartOf="@+id/btnJugador"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>